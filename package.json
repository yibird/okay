{
  "name": "okay",
  "version": "0.0.1",
  "description": "A starter for creating a tsdown package.",
  "homepage": "https://github.com/yibird/okay#readme",
  "bugs": {
    "url": "https://github.com/yibird/okay/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yibird/okay.git"
  },
  "funding": "https://github.com/sponsors/yibird",
  "license": "MIT",
  "author": "zchengfeng <2684837849@qq.com>",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "format": "prettier --cache --write .",
    "lint": "oxlint",
    "lint:fix": "pnpm run lint --fix",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm --recursive --stream build && changeset publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@types/node": "^22.15.17",
    "commitizen": "^4.3.1",
    "conventional-changelog-atom": "^5.0.0",
    "conventional-changelog-cli": "^5.0.0",
    "cz-git": "^1.11.1",
    "eslint": "^9.26.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.2.1",
    "happy-dom": "^17.4.7",
    "oxlint": "^1.23.0",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "tsdown": "^0.15.6",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.11.0",
  "publishConfig": {
    "access": "public"
  }
}
